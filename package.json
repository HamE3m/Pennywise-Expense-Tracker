{
  "name": "pennywise",
  "version": "3.0.0",
  "description": "A comprehensive budget planner and expense tracker built with React, Node.js, and MongoDB",
  "main": "backend/server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install-deps": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rmdir /s /q node_modules frontend\\node_modules backend\\node_modules 2>nul || true"
  },
  "type": "module",
  "keywords": ["expense-tracker", "budget-planner", "personal-finance", "react", "nodejs", "mongodb", "financial-management"],
  "author": "PennyWise Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/pennywise.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/pennywise/issues"
  },
  "homepage": "https://github.com/yourusername/pennywise#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}